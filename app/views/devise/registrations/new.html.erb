

<h2>Sign up</h2><br />
<div class="sign-up-layout">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :name, required: true,  label: "이름", placeholder:"멋쨍이사자",autofocus: true, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :email, required: true, label: "이메일", placeholder:"like@lion.org", autofocus: true, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
  <%= f.input :team_id, required: true, autofocus: true, label: false, placeholder: "Team ID" %>
  </div>
  <div class="form-group">
    <%= f.input :password, required: true, label: "비밀번호", placeholder:"비밀번호", input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :password_confirmation, required: true, label: "비밀번호 확인", placeholder:"비밀번호 확인", required: true, input_html: { class: 'form-control' } %>
  </div>

  <%= f.button :submit, "Sign up", class: "btn btn-default" %>

<% end %>

<%= render "devise/shared/links" %>

</div>
